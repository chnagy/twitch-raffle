extends layout

block head
  script(src="https://code.jquery.com/jquery-3.5.1.min.js",
  integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=",
  crossorigin="anonymous")
  script(src="/javascripts/upload.js")

block header
  h1(class="title") #{title}

block content
  div(class="imgdiv")
    img(src=img, class="img")
  h1(class="winner") #{winner}


  form(action="/raffle/roll" method="GET")
    input(type="submit", value="Reroll", class="w3-btn w3-green")


block rightmenu
  img(src=vanny, id="vannyImg")

block leftmenu
  table(class="table")
    thead
      tr
        th Name (#{namecount})
        th Lose (#{ticketcount})
        th Chance
    tbody
      each entry, key in entries
        tr
          td #{key}
          td #{entry[0]}
          td #{entry[1]}%

block foot
  form(method="post" action="/raffle/submit", enctype="multipart/form-data")
    input(type="file", name="csv", id="actual-btn", hidden)
    label(for="actual-btn", class="w3-btn w3-border w3-border-green") Select File
    span(id="span") No file selected.
    input(type="submit", value="Upload", class="w3-btn w3-green")